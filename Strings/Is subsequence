class Solution {
    public boolean isSubsequence(String s, String t) {
         if (s.length() == 0) {
            return true;
        }
        int idx1 = 0;
        int idx2 = 0;
        while (idx2 < t.length()) {
            if (t.charAt(idx2) == s.charAt(idx1)) {
                idx1++;
                if (idx1 == s.length()) {
                    return true;
                }
            }
            idx2++;
        }
        return false;
    }
}
